load("@rules_cc//cc:defs.bzl", "cc_library")

package(features = ["layering_check"])

genrule(
    name = "regen_config",
    srcs = glob(
        ["**/*"],
        exclude = ["*.bazel"],
    ),
    outs = [
        "config.h",
        "configure.out",
        "gl/string.h",
    ],
    cmd = """
        cd `dirname $(location configure)`
        ./configure > configure.out
        (cd gl && make string.h)
        DIR=`pwd`
        cd -
        for i in $(OUTS); do
          cp $$DIR/`echo $$i | sed -e 's|$(GENDIR)/external/libidn2/||'` $$i
        done
    """,
)

[genrule(
    name = "copy_%s" % hdr,
    srcs = ["unistring/%s.in.h" % hdr],
    outs = ["unistring/%s.h" % hdr],
    cmd = "cp $< $@",
) for hdr in [
    "uniconv",
    "unictype",
    "uninorm",
    "unistr",
    "unitypes",
]]

genrule(
    name = "configmake",
    outs = ["configmake.h"],
    cmd = """
    echo '#define LIBDIR "/usr/lib"' > $@
    """,
)

