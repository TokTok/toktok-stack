load("@rules_cc//cc:defs.bzl", "cc_library")
load("@rules_zig//zig:defs.bzl", "zig_test")
load("@rules_zig//zig:toolchain.bzl", "zig_target_toolchain")

platform(
    name = "x86_64-linux-gnu",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:x86_64",
    ],
)

zig_target_toolchain(
    name = "x86_64-linux-nix_target",
    dynamic_linker = "/nix/store/qn3ggz5sf3hkjs2c797xf7nan3amdxmp-glibc-2.38-27/lib/ld-linux-x86-64.so.2",
    target = "x86_64-linux-gnu.2.34",
)

toolchain(
    name = "x86_64-linux-nix_toolchain",
    target_compatible_with = [
        "@platforms//os:linux",
        "@platforms//cpu:x86_64",
    ],
    toolchain = ":x86_64-linux-nix_target",
    toolchain_type = "@rules_zig//zig/target:toolchain_type",
)

cc_library(
    name = "clib",
    srcs = ["csource.c"],
    hdrs = ["csource.h"],
    deps = ["@libsodium"],
)

zig_test(
    name = "testsuite",
    size = "small",
    cdeps = [
        ":clib",
        "@rules_zig//zig/lib:libc",
    ],
    main = "main.zig",
)
