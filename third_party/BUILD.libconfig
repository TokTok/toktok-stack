load("@rules_cc//cc:defs.bzl", "cc_library")

package(features = ["layering_check"])

cc_library(
    name = "libconfig",
    srcs = glob([
        "lib/*.c",
        "lib/*.h",
    ]),
    hdrs = ["lib/libconfig.h"],
    copts = select({
        "@toktok//tools/config:freebsd": [
            "-DHAVE_NEWLOCALE",
            "-DHAVE_USELOCALE",
            "-DHAVE_FREELOCALE",
        ],
        "@toktok//tools/config:linux": [
            "-std=gnu89",
            "-DHAVE_NEWLOCALE",
            "-DHAVE_USELOCALE",
            "-DHAVE_FREELOCALE",
        ],
        "@toktok//tools/config:osx": [
            "-DHAVE_NEWLOCALE",
            "-DHAVE_USELOCALE",
            "-DHAVE_FREELOCALE",
            "-DHAVE_XLOCALE_H",
        ],
    }),
    includes = ["lib"],
    visibility = ["//visibility:public"],
)
