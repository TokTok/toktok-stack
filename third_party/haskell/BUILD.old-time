load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_cc_import", "haskell_library")

genrule(
    name = "config",
    srcs = [
        "configure",
        "install-sh",
        "config.sub",
        "config.guess",
        "include/HsTime.h",
        "include/HsTimeConfig.h.in",
    ],
    outs = ["include/HsTimeConfig.h"],
    cmd = """
        cd `dirname $(location configure)`
        ./configure
        DIR=`pwd`
        cd -
        cp $$DIR/include/HsTimeConfig.h $@
    """,
)

cc_library(
    name = "cbits",
    srcs = [
        "cbits/timeUtils.c",
        "include/HsTime.h",
        "include/HsTimeConfig.h",
    ],
    copts = ["-D__GLASGOW_HASKELL__"],
    includes = ["include"],
)

haskell_library(
    name = "old-time",
    srcs = glob(["System/Time.hsc"]),
    version = "1.1.0.3",
    visibility = ["//visibility:public"],
    deps = [
        ":cbits",
        "@haskell_old_locale//:old-locale",
        "@toktok//third_party/haskell:base",
    ],
)
