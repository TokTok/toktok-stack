load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_library")

haskell_library(
    name = "MissingH",
    srcs = glob(["src/**/*.*hs"]),
    compiler_flags = [
        "-XCPP",
        "-XDatatypeContexts",
        "-XExistentialQuantification",
        "-XFlexibleContexts",
        "-XFlexibleInstances",
        "-XMultiParamTypeClasses",
        "-XRankNTypes",
        "-XScopedTypeVariables",
    ],
    src_strip_prefix = "src",
    version = "1.4.0.1",
    visibility = ["//visibility:public"],
    deps = [
        "@haskell_hslogger//:hslogger",
        "@haskell_mtl//:mtl",
        "@haskell_network//:network",
        "@haskell_old_locale//:old-locale",
        "@haskell_old_time//:old-time",
        "@haskell_parsec//:parsec",
        "@haskell_regex_compat//:regex-compat",
        "@toktok//third_party/haskell:array",
        "@toktok//third_party/haskell:base",
        "@toktok//third_party/haskell:containers",
        "@toktok//third_party/haskell:directory",
        "@toktok//third_party/haskell:filepath",
        "@toktok//third_party/haskell:process",
        "@toktok//third_party/haskell:time",
        "@toktok//third_party/haskell:unix",
    ],
)
