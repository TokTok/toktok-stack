load("@ai_formation_hazel//tools:mangling.bzl", "hazel_library")
load("@rules_haskell//haskell:defs.bzl", "haskell_library")
load("@toktok//third_party/haskell:packages.bzl", "packages")

PACKAGE_NAME = "base-compat-batteries"

haskell_library(
    name = PACKAGE_NAME,
    srcs = glob(["src/**/*.*hs"]),
    compiler_flags = [
        "-Wno-duplicate-exports",
        "-Wno-trustworthy-safe",
    ],
    src_strip_prefix = "src",
    version = packages[PACKAGE_NAME].version,
    visibility = ["//visibility:public"],
    deps = [
        hazel_library("base"),
        hazel_library("base-compat"),
        hazel_library("bifunctors"),
        hazel_library("contravariant"),
        hazel_library("fail"),
        hazel_library("ghc-prim"),
        hazel_library("nats"),
        hazel_library("OneTuple"),
        hazel_library("semigroups"),
        hazel_library("tagged"),
        hazel_library("transformers"),
        hazel_library("transformers-compat"),
        hazel_library("type-equality"),
        hazel_library("void"),
    ],
)
