load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_library")

cc_library(
    name = "cbits",
    hdrs = ["include/free-common.h"],
)

haskell_library(
    name = "free",
    srcs = glob(["src/**/*.*hs"]),
    compiler_flags = [
        "-XCPP",
        "-Iexternal/haskell_free/include",
    ],
    src_strip_prefix = "src",
    version = "5",
    visibility = ["//visibility:public"],
    deps = [
        ":cbits",
        "@haskell_comonad//:comonad",
        "@haskell_distributive//:distributive",
        "@haskell_exceptions//:exceptions",
        "@haskell_profunctors//:profunctors",
        "@haskell_semigroupoids//:semigroupoids",
        "@haskell_transformers_base//:transformers-base",
        "@toktok//third_party/haskell:base",
        "@toktok//third_party/haskell:containers",
        "@toktok//third_party/haskell:mtl",
        "@toktok//third_party/haskell:template-haskell",
        "@toktok//third_party/haskell:transformers",
    ],
)
