PACKAGE_NAME = "blaze-html"

package(features = ["-layering_check"])

haskell_library(
    name = PACKAGE_NAME,
    srcs = glob(["src/**/*.*hs"]),
    version = packages[PACKAGE_NAME].version,
    visibility = ["//visibility:public"],
    deps = [
        hazel_library("base"),
        hazel_library("blaze-builder"),
        hazel_library("blaze-markup"),
