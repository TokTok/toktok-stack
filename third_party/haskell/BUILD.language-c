load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_library")

genrule(
    name = "Lexer",
    srcs = ["src/Language/C/Parser/Lexer.x"],
    outs = ["src/Language/C/Parser/Lexer.hs"],
    cmd = "alex -o $@ $<",
)

genrule(
    name = "Parser",
    srcs = ["src/Language/C/Parser/Parser.y"],
    outs = ["src/Language/C/Parser/Parser.hs"],
    cmd = "happy -agc -o $@ $<",
)

haskell_library(
    name = "language-c",
    srcs = glob([
        "src/**/*.hs*",
    ]) + [
        ":Parser",
        ":Lexer",
    ],
    compiler_flags = [
        "-XDeriveGeneric",
    ],
    src_strip_prefix = "src",
    version = "0.8.1",
    visibility = ["//visibility:public"],
    deps = [
        "@haskell_syb//:syb",
        "@toktok//third_party/haskell:array",
        "@toktok//third_party/haskell:base",
        "@toktok//third_party/haskell:bytestring",
        "@toktok//third_party/haskell:containers",
        "@toktok//third_party/haskell:deepseq",
        "@toktok//third_party/haskell:directory",
        "@toktok//third_party/haskell:filepath",
        "@toktok//third_party/haskell:pretty",
        "@toktok//third_party/haskell:process",
    ],
)
