load("@ai_formation_hazel//tools:mangling.bzl", "hazel_library", "hazel_workspace")
load("@rules_cc//cc:defs.bzl", "cc_library")
load("@rules_haskell//haskell:defs.bzl", "haskell_library")
load("@toktok//third_party/haskell:packages.bzl", "packages")

PACKAGE_NAME = "bitvec"

package(features = ["-layering_check"])

cc_library(
    name = "cbits",
    srcs = glob(["cbits/*.c"]),
    deps = [hazel_library("rts")],
)

haskell_library(
    name = PACKAGE_NAME,
    srcs = glob(["src/**/*.*hs"]),
    compiler_flags = [
        "-Iexternal/%s/src" % hazel_workspace(PACKAGE_NAME),
    ],
    src_strip_prefix = "src",
    version = packages[PACKAGE_NAME].version,
    visibility = ["//visibility:public"],
    deps = [
        ":cbits",
        hazel_library("base"),
        hazel_library("bytestring"),
        hazel_library("deepseq"),
        hazel_library("ghc-bignum"),
        hazel_library("integer-gmp"),
        hazel_library("primitive"),
        hazel_library("vector"),
    ],
)
