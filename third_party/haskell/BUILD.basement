load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_library")

cc_library(
    name = "cbits",
    srcs = glob(["cbits/*.c"]),
    hdrs = glob(["cbits/*.h"]),
    includes = ["cbits"],
    deps = ["@ghc//:threaded-rts"],
)

haskell_library(
    name = "basement",
    srcs = glob(["Basement/**/*.hs*"]),
    compiler_flags = [
        "-DARCH_IS_LITTLE_ENDIAN",
        "-XBangPatterns",
        "-XNoImplicitPrelude",
        "-XRebindableSyntax",
        "-XTypeFamilies",
        "-XDeriveDataTypeable",
    ],
    version = "0.0.7",
    visibility = ["//visibility:public"],
    deps = [
        ":cbits",
        "@toktok//third_party/haskell:base",
        "@toktok//third_party/haskell:ghc-prim",
    ],
)
