load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_library")

cc_library(
    name = "cbits",
    srcs = glob(["cbits/*.c"]),
    copts = ["-Wno-unused-label"],
    deps = ["@ghc//:threaded-rts"],
)

haskell_library(
    name = "hashable",
    srcs = glob(["Data/**/*.*hs"]),
    compiler_flags = ["-DGENERICS"],
    version = "1.2.6.1",
    visibility = ["//visibility:public"],
    deps = [
        ":cbits",
        "@haskell_text//:text",
        "@toktok//third_party/haskell:base",
        "@toktok//third_party/haskell:bytestring",
        "@toktok//third_party/haskell:deepseq",
        "@toktok//third_party/haskell:ghc-prim",
        "@toktok//third_party/haskell:integer-gmp",
    ],
)
