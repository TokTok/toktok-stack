load("@ai_formation_hazel//tools:mangling.bzl", "hazel_library")
load("@rules_haskell//haskell:defs.bzl", "haskell_library")
load("@toktok//third_party/haskell:packages.bzl", "packages")

PACKAGE_NAME = "tls"

package(features = ["-layering_check"])

haskell_library(
    name = PACKAGE_NAME,
    srcs = glob(["Network/**/*.hs"]),
    compiler_flags = [
        "-DINCLUDE_NETWORK",
        "-Wno-incomplete-uni-patterns",
        "-Wno-noncanonical-monad-instances",
        "-Wno-unused-imports",
        "-Wno-unused-matches",
    ],
    version = packages[PACKAGE_NAME].version,
    visibility = ["//visibility:public"],
    deps = [
        hazel_library("asn1-encoding"),
        hazel_library("asn1-types"),
        hazel_library("async"),
        hazel_library("base"),
        hazel_library("bytestring"),
        hazel_library("cereal"),
        hazel_library("cryptonite"),
        hazel_library("data-default-class"),
        hazel_library("hourglass"),
        hazel_library("memory"),
        hazel_library("mtl"),
        hazel_library("network"),
        hazel_library("transformers"),
        hazel_library("x509"),
        hazel_library("x509-store"),
        hazel_library("x509-validation"),
    ],
)
