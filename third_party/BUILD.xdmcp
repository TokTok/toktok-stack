load("@rules_cc//cc:defs.bzl", "cc_library")

package(features = ["layering_check"])

cc_library(
    name = "xdmcp",
    srcs = glob([
        "*.c",
        "*.h",
    ]),
    hdrs = ["include/X11/Xdmcp.h"],
    copts = [
        "-D_DEFAULT_SOURCE",
        "-DHASXDMAUTH",
        "-DHAVE_LRAND48",
        "-DHAVE_SRAND48",
        "-Wno-unused-variable",
    ],
    includes = ["include"],
    visibility = ["//visibility:public"],
    deps = ["@xproto"],
)
