load("@toktok//third_party/qt:build_defs.bzl", "qt_import")

[alias(
    name = name,
    actual = select({
        "@toktok//tools/config:windows": "bin/%s.exe" % name,
        "//conditions:default": "bin/%s" % name,
    }),
    visibility = ["//visibility:public"],
) for name in [
    "lconvert",
    "macdeployqt",
    "moc",
    "rcc",
    "uic",
    "windeployqt",
]]

qt_import(
    name = "qt_concurrent",
    module = "Concurrent",
)

qt_import(
    name = "qt_core",
    module = "Core",
)

qt_import(
    name = "qt_gui",
    module = "Gui",
)

qt_import(
    name = "qt_multimedia",
    module = "Multimedia",
)

qt_import(
    name = "qt_multimedia_widgets",
    module = "MultimediaWidgets",
)

qt_import(
    name = "qt_opengl",
    module = "OpenGL",
)

qt_import(
    name = "qt_network",
    module = "Network",
)

qt_import(
    name = "qt_svg",
    module = "Svg",
)

qt_import(
    name = "qt_test",
    module = "Test",
)

qt_import(
    name = "qt_widgets",
    module = "Widgets",
)

qt_import(
    name = "qt_xml",
    module = "Xml",
)

filegroup(
    name = "qt",
    srcs = [],
    visibility = ["@toktok//third_party:__pkg__"],
)
