package(features = ["layering_check"])

[alias(
    name = name,
    actual = "@qt5.qtbase.dev//:bin/%s" % name,
    visibility = ["//visibility:public"],
) for name in [
    "moc",
    "rcc",
    "uic",
]]

[alias(
    name = name,
    actual = "bin/%s" % name,
    visibility = ["//visibility:public"],
) for name in [
    "lconvert",
]]

[alias(
    name = "qt_" + mod.lower(),
    actual = "@qt5.qtbase.dev//:" + mod.lower(),
    visibility = ["//visibility:public"],
) for mod in [
    "Concurrent",
    "Core",
    "Gui",
    "OpenGL",
    "Network",
    "Test",
    "Widgets",
    "Xml",
]]

[alias(
    name = "qt_" + mod.lower(),
    actual = "@qt5.qtmultimedia.dev//:" + mod.lower(),
    visibility = ["//visibility:public"],
) for mod in [
    "Multimedia",
    "MultimediaWidgets",
]]

[alias(
    name = "qt_" + mod.lower(),
    actual = "@qt5.qtsvg.dev//:" + mod.lower(),
    visibility = ["//visibility:public"],
) for mod in [
    "Svg",
]]

filegroup(
    name = "qt",
    srcs = [
        ":qt_concurrent",
        ":qt_core",
        ":qt_gui",
        ":qt_multimedia",
        ":qt_multimediawidgets",
        ":qt_network",
        ":qt_opengl",
        ":qt_svg",
        ":qt_test",
        ":qt_widgets",
        ":qt_xml",
    ],
    visibility = ["@toktok//third_party:__pkg__"],
)
